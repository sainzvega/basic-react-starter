{
  "env": {
    "browser": true,
    "node": true,
    "es6": true
  },
  "parser": "babel-eslint",
  "parserOptions": {
    "sourceType": "module",
    "allowImportExportEverywhere": false,
    "codeFrame": false
  },
  "settings": {
    "flowtype": {
      "onlyFilesWithFlowAnnotation": true
    }
  },
  "extends": ["eslint:recommended", "plugin:react/recommended"],
  "plugins": ["react", "jsx-a11y", "import"],
  "rules": {
    "no-console": 1,
    "no-debugger": 1,
    "no-unused-vars": 1,
    "react/prop-types": 0,
    "react/display-name": 1
  }
}
